package net.unionstudio.utils {		import flash.display.LoaderInfo;		public class GetFlashVars {				public var fv:Object = {};		private var tStr:String = "";		private var numStr:String;				/* You need to pass a reference to the root when you instantiate this, since this class doesn't extend a DisplayObject */		function GetFlashVars(rootRef) {						init(rootRef);					}				private function init(rootRef):void {						try {								var keyStr:String;				var valStr:String;				var paramObj:Object = LoaderInfo(rootRef.loaderInfo).parameters;				var num:Number = 0;								for (keyStr in paramObj) {										num++;					valStr = String(paramObj[keyStr]);					tStr += keyStr+"="+valStr+" ";					fv[keyStr] = valStr;									}							} catch (error:Error) {								trace("*ERROR*"+String(error));							}						numStr=String(num);					}				public function get flashVars():Object {						return fv;					}			}			}